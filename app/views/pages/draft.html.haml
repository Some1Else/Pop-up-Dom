%section.light-content.participants.sponsors
  .container
    .content
      .heading
        %h2
          .new-dim.new-dim-static
            .text
              Sodelujoči
      .participant-list.col_12
        - participants = []
        - @participants.each do |p|
          - participant = link_to p.name, p.link
          - participants.push participant
        =raw participants.join ', '
    
    .content
      .heading
        %h2
          .new-dim.new-dim-static
            .text
              Sponzorji
      .sponsor-list.col_12
        - sponsors = []
        - @sponsors.each do |s|
          - sponsor = link_to s.name, s.link
          - sponsors.push sponsor
        =raw sponsors.join ', '

%section.dark-content.contacts
  .container
    .content
      .heading
        %h2
          .new-dim.new-dim-static
            .text
              Kontakti
        %ul.regular-list
          - @contacts.each do |c|
            %li
              %strong= c.name
              |
              %em= c.role
              |
              = link_to c.address, "mailto:#{c.address}"