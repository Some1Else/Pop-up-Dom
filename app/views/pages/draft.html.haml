%section.white-content.events
  .container
    .content
      .heading
        %h2
          .new-dim.new-dim-static
            .text
              Dogodki
             
      / %ul.regular-list.category-list
      /   - @event_categories.each do |c|
      /     %li= c.name
      
      .event-list
        - @events.each_with_index do |e, i|
          .event.category-list
            .insides
              %h3= e.name
              %h4
                - case e.begins_at.strftime "%A"
                  - when "Monday"
                    Ponedeljek,
                    
                  - when "Tuesday"
                    Torek,
                    
                  - when "Wednesday"
                    Sreda,
                    
                  - when "Thursday"
                    Četrtek,
                    
                  - when "Friday"
                    Petek,

                  - when "Saturday"
                    Sobota,

                  - when "Sunday"
                    Nedelja,
                    
                = e.begins_at.strftime "%-d.%-m.%y ob %-H:%M"

              - if i == 2
                .leimage
                  %img{:src => '/img/tmp/bil-uvod.jpg', :style => 'width: 100%;'}
              .description
                != Markdown.new(e.description).to_html

            - if e.price > 0
              .price
                = "€ #{e.price.round}"

              .buy
                %a{:href => '#'} Kupi karte
                
            
  %br
  %br
  %br
  %br

